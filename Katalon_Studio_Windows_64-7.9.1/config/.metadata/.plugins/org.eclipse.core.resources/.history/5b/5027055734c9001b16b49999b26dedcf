tensp = WebUI.getText(findTestObject('Page_TrangChu/tenSP'))

giasp = WebUI.getText(findTestObject('Page_TrangChu/giaSP'))

WebUI.click(findTestObject('Page_TrangChu/Button_MuaNgay'))
if(WebUI.waitForElementPresent(findTestObject("Page_TrangChu/load", 30))) {//Nếu thanh load hiển thị lên thì sp đó đk vào trong giỏ hàng
	WebUI.waitForPageLoad(30)//đợi trang đó load trong vòng 30s nếu quá tgian thì nó fail
		
}else {
	WebUI.click(findTestObject('Page_TrangChu/Button_MuaNgay'))//Nếu không load được thì nhấn lại lần nữa 
	
	WebUI.waitForPageLoad(30)
	
}

WebUI.verifyElementText(findTestObject('Page_GioHang/maSP'), masp)

